<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tab_today_tasks_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tab_today_task_no_task_image_view"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/no_task_baby_smile"/>

        <TextView
            android:id="@+id/tab_today_tasks_no_task_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Tasks Today"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>


</FrameLayout>


